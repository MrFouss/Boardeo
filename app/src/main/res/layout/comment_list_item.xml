<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/boardRootLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/fab_margin">

    <fr.fouss.boardeo.listing.CommentView
        android:id="@+id/comment_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/fab_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/comment_content_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Drawy.CommentCardContent"
            android:text="@string/comment_content_field" />

        <TextView
            android:id="@+id/comment_author_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fab_margin"
            style="@style/Drawy.CommentCardAuthor"
            android:text="@string/comment_author_field" />

        <TextView
            android:id="@+id/comment_date_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_spacing"
            style="@style/Drawy.CommentCardDate"
            android:text="@string/comment_date_field" />

    </fr.fouss.boardeo.listing.CommentView>

</android.support.v7.widget.CardView>