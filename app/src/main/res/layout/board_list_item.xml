<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/boardRootLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/fab_margin"
    android:layout_marginRight="@dimen/fab_margin"
    android:layout_marginTop="@dimen/fab_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/fab_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/board_name_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Drawy.BoardCardName"
                android:text="@string/board_name_field" />

            <TextView
                android:id="@+id/board_short_description_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fab_margin"
                style="@style/Drawy.BoardCardShortDescription"
                android:text="@string/short_description_field" />
        </LinearLayout>

</android.support.v7.widget.CardView>