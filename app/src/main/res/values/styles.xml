<resources>

    <!-- Base application theme. -->
    <style name="Drawy" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="colorAccent">@color/primaryColorDark</item>
    </style>

    <style name="Drawy.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Drawy.TextDetail">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fadeScrollbars">true</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">5</item>
        <item name="android:padding">4dp</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Drawy.AppTitle">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="Drawy.LoginLinks">
        <item name="android:textColor">@color/secondaryColorLight</item>
    </style>

    <style name="Drawy.MapsInfoWindowTitle">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Drawy.MapsInfoWindowSnippet">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grey_100</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Board list items -->

    <style name="Drawy.BoardCardName">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Drawy.BoardCardShortDescription">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grey_100</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Post list items -->

    <style name="Drawy.PostCardTitle">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Drawy.PostCardAuthor">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grey_400</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Drawy.PostCardDate">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grey_400</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Drawy.PostCardContent">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grey_100</item>
        <item name="android:maxLines">5</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>
